<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:padding="16dp"
    tools:context=".view.register.RegisterChooseFragment">

    <ImageView
        android:id="@+id/img_office"
        android:src="@drawable/office"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_influencer"/>

    <Button
        android:id="@+id/btn_to_company"
        android:stateListAnimator="@null"
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_company"
        app:layout_constraintTop_toTopOf="@id/img_office"
        app:layout_constraintEnd_toEndOf="@id/img_office"
        app:layout_constraintStart_toStartOf="@id/img_office"
        app:layout_constraintBottom_toBottomOf="@id/img_office"/>

    <ImageView
        android:id="@+id/img_influencer"
        android:src="@drawable/influencer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/img_office"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_to_influencer"
        android:stateListAnimator="@null"
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_influencer"
        app:layout_constraintTop_toTopOf="@id/img_influencer"
        app:layout_constraintEnd_toEndOf="@id/img_influencer"
        app:layout_constraintBottom_toBottomOf="@id/img_influencer"
        app:layout_constraintStart_toStartOf="@id/img_influencer"/>

</androidx.constraintlayout.widget.ConstraintLayout>