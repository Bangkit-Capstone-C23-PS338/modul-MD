<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/userphoto"
                android:id="@+id/avatar_card"
                android:layout_width="200dp"
                android:layout_height="190dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/iu" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/cardName"
                        android:text="@string/card_name"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/seed"/>

                    <ImageView
                        android:contentDescription="@string/userphoto"
                        android:layout_height="12dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="12dp"
                        android:layout_gravity="center"
                        android:id="@+id/verivied"
                        tools:srcCompat="@drawable/baseline_verified_24" />


                </LinearLayout>

                <TextView
                    android:id="@+id/follower_Card"
                    android:text="@string/follower_card"
                    android:textSize="10dp"
                    android:paddingTop="3dp"
                    />

                <TextView
                    android:id="@+id/card_price"
                    android:text="@string/cost"
                    android:textSize="10dp"
                    android:paddingTop="3dp"
                    />

                <Button
                    android:id="@+id/book_card_btn"
                    android:layout_marginTop="4dp"
                    app:cornerRadius="5dp"
                    android:enabled="true"
                    android:textSize="9dp"
                    android:text="@string/card_book"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="32dp"
                    android:layout_width="match_parent" />

            </TableLayout>


        </TableLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>