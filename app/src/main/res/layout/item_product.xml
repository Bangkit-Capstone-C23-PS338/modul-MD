<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/sosmed_logo"
                    android:layout_width="12dp"
                    android:layout_weight="1"
                    android:layout_height="22dp"
                    tools:srcCompat="@drawable/full_insta_logo"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_weight="3"
                    android:layout_height="22dp"/>
            </TableRow>


            <TableRow
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/paket_title"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/product_name"/>

                <ImageView
                    android:id="@+id/infoAcc"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:srcCompat = "@drawable/baseline_info_24"/>

            </TableRow>



            <TextView
                android:id="@+id/desc_sosmed"
                android:lineHeight="20dp"
                android:layout_marginTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc"/>

            <TextView
                android:lineHeight="20dp"
                android:id="@+id/criteria"
                android:textColor="@color/md_theme_light_primary"
                android:layout_marginTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/todo"/>

            <TableRow
                android:layout_width="match_parent"

                android:layout_marginTop="11dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/project_price"
                    android:layout_width="match_parent"
                    android:layout_weight="20"
                    android:layout_height="wrap_content"
                    android:text="@string/product_price"/>

                <Button
                    android:id="@+id/checkBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/check_acc"
                    android:textSize="12sp" />

            </TableRow>




        </TableLayout>

    </androidx.cardview.widget.CardView>
